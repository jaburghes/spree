<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title">
      <%= Spree.t(:general_settings) %>
    </h5>
  </div>

  <div class="card-body" data-controller="slug-form">
    <div class="form-group">
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, class: 'form-control', required: true,  data: { slug_form_target: :name, action: 'input->slug-form#updateUrlFromName' }, autofocus: f.object.new_record? %>
      <%= f.error_message_on :name %>
    </div>

    <div class="form-group">
      <%= f.label :key, Spree.t(:key) %>
      <%= f.text_field :key, class: 'form-control', required: true, data: { slug_form_target: :url } %>
      <%= f.error_message_on :key %>
    </div>

    <div class="form-group">
      <%= f.label :description, Spree.t(:description) %>
      <%= f.text_area :description, class: 'form-control', rows: 3 %>
      <%= f.error_message_on :description %>
    </div>

    <div class="form-group">
      <%= f.label :owner_type, Spree.t(:owner_type) %>
      <%= f.select :owner_type, 
          options_for_select(metafield_definition_owner_types.map { |type| [type.demodulize, type] }, f.object.owner_type),
          { include_blank: Spree.t(:select_owner_type) },
          { class: 'custom-select', required: true } %>
      <%= f.error_message_on :owner_type %>
    </div>

    <div class="form-group">
      <%= f.label :kind, Spree.t(:kind) %>
      <%= f.select :kind, 
          options_for_select(metafield_definition_kinds.map { |kind| [Spree.t("metafield_definitions.form.#{kind}"), kind] }, f.object.kind),
          { include_blank: Spree.t(:select_kind) },
          { class: 'custom-select', required: true } %>
      <%= f.error_message_on :kind %>
    </div>

    <div class="form-group">
      <%= f.label :display_on, Spree.t(:display_on) %>
      <%= f.select :display_on, 
          options_for_select(display_on_options, f.object.display_on),
          { include_blank: Spree.t(:select_display_on) },
          { class: 'custom-select', required: true } %>
      <%= f.error_message_on :display_on %>
    </div>
  </div>
</div>