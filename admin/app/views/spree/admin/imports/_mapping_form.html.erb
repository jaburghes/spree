<% options ||= import.schema_fields_without_already_mapped.map { |field| [Spree.t(field[:name]), field[:name]] } %>

<%= turbo_frame_tag spree_dom_id(mapping) do %>
  <%= form_for mapping, url: spree.admin_import_mapping_path(import, mapping), method: :put, data: { controller: 'auto-submit' } do |f| %>
    <% if mapping.file_column.present? %>
      <% options.prepend([Spree.t(mapping.file_column), mapping.file_column]) %>
    <% end %>
    <%= f.select :file_column, options_for_select(options, mapping.file_column), { include_blank: 'Please select a column' }, { data: { action: 'auto-submit#submit' }, class: 'custom-select', id: "import_mapping_file_column_#{mapping.id}" } %>
  <% end %>
<% end %>