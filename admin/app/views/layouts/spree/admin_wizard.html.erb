<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "spree/admin/shared/head" %>
  </head>

  <body class="admin min-vh-100 <%= controller_name %> <%= action_name %>"
    data-controller="admin"
    data-action="keydown.ctrl+s->admin#save keydown.meta+s->admin#save"
  >
    <%= render_admin_partials(:body_start_partials) %>

    <header id="header" class="py-0">
      <nav class="navbar navbar-expand-lg p-0 d-flex align-items-center pr-3">
        <%= render 'spree/admin/shared/back_to_dashboard' %>

        <% if content_for?(:steps) %>
          <ol class="d-flex align-items-center list-unstyled flex-grow-1 justify-content-between align-items-center m-0" style="height: 60px;">
            <%= yield :steps %>
          </ol>
        <% end %>
      </nav>
    </header>

    <div class="d-lg-none py-3 border-bottom">
      <%= render 'spree/admin/shared/breadcrumbs' %>
    </div>

    <main class="pb-5">
      <%= yield %>
    </main>

    <%= yield :footer %>
    
    <%= render "spree/admin/shared/modal" %>
    <%= render "spree/admin/shared/alerts" %>

    <%= render_admin_partials(:body_end_partials) %>
  </body>
</html>
